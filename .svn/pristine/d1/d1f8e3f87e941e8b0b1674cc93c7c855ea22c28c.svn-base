html{

}
div{

    color: rgb(163,163,163);
    font-size: 23px;
}
body{
    height:100%;
}
.page_container{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}
.page_body{
    height: 100%;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.video_intro{
    align-self: flex-start;
    padding: 30px;
}
.video_intro_sub{
    display: flex;
    margin: 5px;
    font-size: 29px;
}
.video_entity{
    width: 100%;
    height: 540px;
}
.tiny_title{
    display: flex;
    justify-content: space-around;
}
.tiny>div{
    position: relative;
    left: -327px;
    font-size: 30px;

}
.course_infos:nth-child(4) .course_item:nth-child(1) .course_icon{
    background-image: url(./course_icon1.png);
}
.course_infos:nth-child(4) .course_item:nth-child(2) .course_icon{
    background-image: url(./course_icon1.png);
}
.course_infos:nth-child(4) .course_item:nth-child(3) .course_icon{
    background-image: url(./course_icon1.png);
}
.audio_entity{
    width: 100%;
    height: 120px;
    display: flex;
    justify-content: center;
    align-items: center;
}
audio{
    width: 50%;

}
.course_intros_icon{
    background-image: url(./course_intro.png);
    background-repeat: no-repeat;
    background-position: center center;
    width: 400px;
    height: 300px;

}
.course_intros{
    display: flex;
}
.partion{
    height: 50px;
    width: 100%;
    background-color: rgb(237, 237, 237);
}
.zhubo_intro{
    display: flex;
    justify-content: space-around;
    width: 100%;
}
.zhubo_icon{
    background-image: url(./zhubo.png);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 80% 80%;
    width: 200px;
    height: 200px;
}
.intros_content{
    width: 500px;
}
.zhubo_intro_content{
    width: 700px;
}
